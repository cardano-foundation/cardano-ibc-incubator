{
  "name": "gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose --detectOpenHandles --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@cardano-ogmios/client": "6.13.0",
    "@cardano-ogmios/schema": "6.13.0",
    "@cuonglv0297/mithril-client-wasm": "^0.3.1",
    "@dcspark/cardano-multiplatform-lib-nodejs": "6.2.0",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "@harmoniclabs/bytestring": "^1.0.0",
    "@harmoniclabs/cbor": "^1.6.6",
    "@harmoniclabs/crypto": "^0.3.0",
    "@harmoniclabs/ouroboros-miniprotocols-ts": "0.0.4",
    "@harmoniclabs/pair": "^1.0.0",
    "@harmoniclabs/plutus-data": "^1.2.4",
    "@harmoniclabs/uint8array-utils": "1.0.4",
    "@lucid-evolution/lucid": "^0.4.29",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "@plus/proto-types": "file:../../proto-types",
    "prom-client": "^15.1.0",
    "axios": "^1.10.0",
    "camelcase-keys": "^9.1.3",
    "cbor": "10.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "crypto": "^1.0.1",
    "google-proto-files": "^5.0.0",
    "google-protobuf": "^3.21.4",
    "js-sha256": "^0.11.1",
    "js-sha3": "^0.9.3",
    "pg": "^8.16.0",
    "protobufjs": "^7.5.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.24",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1",
      "^~@/(.*)$": "<rootDir>/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@cosmjs-types/(.*)$": "<rootDir>/../cosmjs-types/$1",
      "^cosmjs-types/(.*)$": "<rootDir>/../cosmjs-types/$1",
      "^@utils/(.*)$": [
        "<rootDir>/utils/$1"
      ],
      "^@config(.*)$": [
        "<rootDir>/config/$1"
      ]
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      "interfaces",
      "jestGlobalMocks.ts",
      ".module.ts",
      "<rootDir>/src/app/main.ts",
      ".mock.ts",
      "<rootDir>/src/ibc-event-watcher/ibc-event-watcher.module.ts",
      "<rootDir>/src/ibc-event-watcher/ibc-event-watcher.service.ts",
      "<rootDir>/src/query/services/db-sync.service.ts",
      "<rootDir>/src/shared/modules/lucid/lucid.service.ts"
    ],
    "collectCoverageFrom": [
      "**/*.controller.ts",
      "**/client.service.ts",
      "**/connection.service.ts",
      "**/channel.service.ts",
      "**/packet.service.ts",
      "**/query.service.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
